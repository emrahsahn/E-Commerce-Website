@model ETicaretSitesi.Models.ForgotPasswordViewModel

@{
    ViewBag.Title = "Şifremi Unuttum";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (ViewBag.Message != null)
{
    <div class="alert alert-success">
        @ViewBag.Message
    </div>
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="TTES-Shop - ECommerce Website Template">
    <meta name="keywords" content="ecommerce, shop, fashion, clothing, accessories">
    <meta name="author" content="TTES-Shop">
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,200,300,400,500,600,700,800,900&display=swap" rel="stylesheet">
    <title>@ViewBag.Title - Ecommerce HTML CSS Template</title>


    <link href="/Content/css/bootstrap.min.css" rel="stylesheet" />
    <script src="/js/modernizr.js"></script>

    <!-- Additional CSS Files -->
    <link href="/Content/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/Content/css/font-awesome.css" rel="stylesheet" />

    <link rel="stylesheet" href="/Content/css/templatemo-hexashop.css" />
    <link rel="stylesheet" href="/Content/css/owl-carousel.css" />
    <link rel="stylesheet" href="/Content/css/lightbox.css" />

    <!--

    TemplateMo 571 Hexashop

    https://templatemo.com/tm-571-hexashop

    -->
</head>

<body>

    <!-- ***** Preloader Start ***** -->
    <div id="preloader">
        <div class="jumper">
            <div></div>
            <div></div>
            <div></div>
        </div>
    </div>
    <!-- ***** Preloader End ***** -->
    <!-- ***** Header Area Start ***** -->
    @await Html.PartialAsync("_Header")
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>
    <!-- ***** Header Area End ***** -->
    <main class="container mt-5">
        <h2 class="text-center">@ViewBag.Title</h2>
        <div class="row justify-content-center">
            <div class="col-md-8">
                <form asp-action="ForgotPassword" asp-controller="Account" method="post">
                    @Html.AntiForgeryToken()
                    <h4 class="text-center">E-posta adresinizi girin</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <!-- E-posta Alanı -->
                    <div class="form-group">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <!-- Gönder Butonu -->
                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary">Şifre Sıfırlama Bağlantısı Gönder</button>
                    </div>

                    <p class="text-center mt-3">
                        <a asp-action="Login" asp-controller="Account" class="text-decoration-none">Oturum Aç</a>
                    </p>
                </form>
            </div>
        </div>
    </main>
    <br>
    <br>
    <br>
    <br>
    <br>
    <br>

    <!-- ***** Footer Start ***** -->
    @await Html.PartialAsync("_Footer")


    <!-- jQuery -->
    <script src="/js/jquery-3.7.0.js"></script>

    <!-- Bootstrap -->
    <script src="/js/popper.js"></script>
    <script src="/js/bootstrap.min.js"></script>

    <!-- Plugins -->
    <script src="/js/owl-carousel.js"></script>
    <script src="/js/accordions.js"></script>
    <script src="/js/datepicker.js"></script>
    <script src="/js/scrollreveal.min.js"></script>
    <script src="/js/waypoints.min.js"></script>
    <script src="/js/jquery.counterup.min.js"></script>
    <script src="/js/imgfix.min.js"></script>
    <script src="/js/slick.js"></script>
    <script src="/js/lightbox.js"></script>
    <script src="/js/isotope.js"></script>

    <!-- Global Init -->
    <script src="/js/custom.js"></script>


</body>
</html>